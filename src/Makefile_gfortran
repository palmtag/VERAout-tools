#
#  VERAout-tools
#
# Specify Location of HDF5 binaries (with include/ and lib/ underneath)
HDF5=/opt/hdf5

# Compiler
# Use the HDF Fortran compiler wrapper....
FC = $(HDF5)/bin/h5fc

# Flags for gfortran....
FFLAGS = -Wall -fbacktrace -fbounds-check
HDFOPT =

.SUFFIXES:
.SUFFIXES: .o .f90 .exe

all:    hunittest.exe makehdf.exe mpactread.exe mpactxmf.exe mpactres.exe ctfread.exe veradiff.exe getscaler.exe

mpactread.exe: Mod_hdftools.o Mod_batch.o mpactread.o output_utils.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

mpactxmf.exe: Mod_hdftools.o mpactxmf.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

mpactres.exe: Mod_hdftools.o mpactres.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

ctfread.exe: Mod_hdftools.o ctfread.o output_utils.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

hunittest.exe: Mod_hdftools.o hunittest.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

makehdf.exe: Mod_hdftools.o makehdf.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

veradiff.exe: Mod_hdftools.o veradiff.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

getscaler.exe: Mod_hdftools.o getscaler.o
	$(FC) $(FFLAGS) $^ $(HDFOPT) -o $@

.f90.o:
	$(FC) $(FFLAGS) -c $*.f90

clean:
	rm -f *.o *.exe *.mod dsetunit.h5

mpactread.o : Mod_hdftools.o Mod_batch.o
mpactxmf.o : Mod_hdftools.o
mpactres.o : Mod_hdftools.o
ctfread.o : Mod_hdftools.o
hunittest.o : Mod_hdftools.o
makehdf.o : Mod_hdftools.o
veradiff.o : Mod_hdftools.o
getscaler.o : Mod_hdftools.o
